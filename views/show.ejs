<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="ui main text segment">
                <img src="<%= blog.image %>" class="ui medium centered rounded image">
                <div class="description">
                    <p><%- blog.body %></p> 
                    <!-- to do : sanatize for possible script tags -->
                </div>
                <br>
            </div>
            <div id="options">
                <a href="/blogs/<%= blog._id %>/edit" class="ui orange inverted button" id="edit">Edit</a>
                <form method="POST" id="delete" action="/blogs/<%= blog._id %>?_method=DELETE">
                    <button class="ui red inverted button">Delete</button>
                </form>
            </div>    
        </div>
    </div>
</div>

<%- include("partials/footer") %>